
<h1><%= @user.user_name %></h1>

<div class="container">
  <% @user.shoes.each do |shoe| %>
    <div class="col-md-3">
      <%= image_tag shoe.image.url(:medium) %><br>
      Name: <%= shoe.name %><br>
      <br>
      Size: <%=shoe.size %><br>
      <br>
      Brand: <%=shoe.brand %><br>
      <br>
      Price: <%=shoe.price %><br>
      <br>
      Notes: <%=shoe.notes %><br>
      <br>
      Color: <%=shoe.color %><br>
      <br>
      Condition: <%=shoe.condition %><br>

      <%= link_to 'Edit', edit_shoe_path, class: "btn btn-warning" %>
      <%= link_to 'New', new_shoe_path, class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
